<h2 class="new-book">New Book Form</h2>
<div class="form">
<%= form_for @book do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :isbn %>
  <%= f.text_field :isbn %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :publication_date %>
  <%= f.text_field :publication_date %>

  <%= f.submit "Add Book" %>

<% end %>
</div>
